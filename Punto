#pragma once
#include <string>
#include <iostream>
using namespace std;

class Punto
{
public:
	
	Punto(int cX, int cY, int cZ);
	Punto(int cX, int cY);
	Punto();
	~Punto();
	void setX(int x);
	void setY(int y);
	void setZ(int z);
	void setDim(string dim);
	int getX(void);
	int getY(void);
	int getZ(void);
	string getDim(void);
	

private:
	string dim;
	int x, y, z;
};

Punto::Punto(int cX, int cY, int cZ) {
	x = cX;
	y = cY;
	z = cZ;
	dim = "Tres dimensiones";
}

Punto::Punto(int cX, int cY) {
	x = cX;
	y = cY;
	dim = "Dos dimensiones";
}

Punto::Punto() {
	x = 0;
	y = 0;
	z = 0;
	dim = "Ninguna dimensi√≥n";
}

void Punto::setX(int cX) {
	x = cX;

}
void Punto::setY(int cY) {
	y = cY;

}
void Punto::setZ(int cZ) {
	z = cZ;

}


int Punto::getX() {
	return x;
}
int Punto::getY() {
	return y;
}
int Punto::getZ() {
	return z;
}

void Punto::setDim(string dim) {
	dim = dim;
}

string Punto::getDim() {
	return dim;
}
